@model FitMindAI.ViewModels.Trainer.ServiceSelectionViewModel
@{
    ViewData["Title"] = "Servis Seçin";
}

<div class="container mt-4">
    <h2>Servis Seçin</h2>
    <hr />

    <div class="alert alert-info">
        <strong>Antrenör:</strong> @Model.TrainerName<br />
        <strong>Salon:</strong> @Model.GymName
        @if (!string.IsNullOrEmpty(Model.TrainerBio))
        {
            <br /><strong>Biyografi:</strong> @Model.TrainerBio
        }
    </div>

    <form asp-action="SelectDateTime" method="get">
        <input type="hidden" name="trainerId" value="@Model.TrainerId" />
        
        <div class="list-group mb-4">
            @foreach (var service in Model.Services)
            {
                <label class="list-group-item list-group-item-action">
                    <input type="radio" name="serviceTypeId" value="@service.Id" required class="form-check-input me-2" />
                    <div>
                        <h5 class="mb-1">@service.Name</h5>
                        @if (!string.IsNullOrEmpty(service.Description))
                        {
                            <p class="mb-1 text-muted">@service.Description</p>
                        }
                        <small>
                            <strong>Süre:</strong> @service.DurationInMinutes dakika | 
                            <strong>Fiyat:</strong> @service.Price.ToString("C2")
                        </small>
                    </div>
                </label>
            }
        </div>

        <div class="d-flex gap-2">
            <a asp-action="SelectTrainer" class="btn btn-secondary">Geri</a>
            <button type="submit" class="btn btn-primary">İleri</button>
        </div>
    </form>
</div>
