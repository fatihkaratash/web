@model IEnumerable<FitMindAI.ViewModels.Trainer.TrainerListItemViewModel>
@{
    ViewData["Title"] = "Antrenor Secin";
    var gym = ViewBag.SelectedGym as FitMindAI.Models.Gym;
}

<div class="container mt-4">
    <h2>2. Antrenor Secin</h2>
    <hr />

    @if (gym != null)
    {
        <div class="alert alert-info mb-4">
            <strong>Secilen Salon:</strong> @gym.Name - @gym.Address
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            Bu salonda aktif antrenor bulunamadi.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var trainer in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@trainer.FullName</h5>
                            <p class="card-text">
                                @if (!string.IsNullOrEmpty(trainer.Specialties))
                                {
                                    <strong>Uzmanlik:</strong> @trainer.Specialties<br />
                                }
                                @if (!string.IsNullOrEmpty(trainer.Bio))
                                {
                                    <small>@trainer.Bio</small><br />
                                }
                                <small class="text-muted">@trainer.ServiceCount hizmet sunuyor</small>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="SelectService" asp-route-trainerId="@trainer.Id" class="btn btn-primary w-100">Sec</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-3">
        <a asp-action="SelectGym" class="btn btn-secondary">Salon Secime Don</a>
    </div>
</div>
