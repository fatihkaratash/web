@model IEnumerable<FitMindAI.ViewModels.AiRecommendationListViewModel>
@{
    ViewData["Title"] = "Geçmiş AI Önerilerim";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Geçmiş AI Önerilerim</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Öneri Oluştur
                </a>
            </div>
            <hr />

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h5>Henüz AI öneriniz yok</h5>
                    <p>Kişiselleştirilmiş antrenman programı oluşturun.</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> İlk Programımı Oluştur
                    </a>
                </div>
            }
            else
            {

                <div class="row">
                    @foreach (var recommendation in Model)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <h6 class="text-primary mb-0">@recommendation.Goal</h6>
                                        <small class="text-muted">@recommendation.CreatedAt.ToString("dd MMM")</small>
                                    </div>
                                    <p class="card-text text-muted small">
                                        @recommendation.OutputPreview
                                    </p>
                                    <a asp-action="Details" asp-route-id="@recommendation.Id" class="btn btn-sm btn-outline-primary w-100">
                                        Görüntüle
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
