@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12 text-center mb-3">
            <h1 class="display-4 fw-bold text-primary">FitMind AI</h1>
            <p class="text-muted">Spor Salonu Randevu Sistemi</p>
        </div>
    </div>

   
    @if (User.Identity?.IsAuthenticated != true)
    {
        <div class="row">
            <div class="col-lg-6 mx-auto text-center">
                <div class="p-4 border rounded bg-light">
                    <h4 class="mb-3">Hemen Baslayin</h4>
                    <p class="text-muted mb-3">Uye olun ve randevu almaya baslayin</p>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-area="Members" asp-page="/Account/Register" class="btn btn-primary">Uye Ol</a>
                        <a asp-area="Members" asp-page="/Account/Login" class="btn btn-outline-secondary">Giris Yap</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-6 mx-auto text-center">
                <div class="p-4 border rounded bg-primary text-white">
                    <h4 class="mb-3">Randevu Al</h4>
                    <p class="mb-3">Salonlarimizi inceleyin ve randevu alin</p>
                    <a asp-controller="Appointment" asp-action="SelectGym" class="btn btn-light">Randevu Olustur</a>
                </div>
            </div>
        </div>
    }

     <div class="row mb-4">
        <div class="col-lg-6 mx-auto">
            <ul class="list-unstyled text-center">
                <li class="mb-2">- Antrenorlerinizle kolayca randevu alin</li>
                <li class="mb-2">- Uzman kadromuzla fitness, yoga ve pilates dersleri</li>
                <li class="mb-2">- Farkli salonlarimizdan size uygun olani secin</li>
            </ul>
        </div>
    </div>
</div>
