@model FitMindAI.Models.Gym
@{
    ViewData["Title"] = "Salon Düzenle";
}

<div class="container mt-4">
    <h2>Salon Düzenle</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder="0555 123 4567" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="OpeningHour" class="form-label"></label>
                        <input asp-for="OpeningHour" type="time" class="form-control" />
                        <span asp-validation-for="OpeningHour" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ClosingHour" class="form-label"></label>
                        <input asp-for="ClosingHour" type="time" class="form-control" />
                        <span asp-validation-for="ClosingHour" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
