@model FitMindAI.Models.ServiceType
@{
    ViewData["Title"] = "Hizmet Sil";
}

<div class="container mt-4">
    <h2>Hizmet Sil</h2>
    <hr />

    <div class="alert alert-warning">
        <h5>Bu hizmeti silmek istediğinizden emin misiniz?</h5>
    </div>

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.DurationInMinutes)</dt>
        <dd class="col-sm-9">@Model.DurationInMinutes dakika</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Price)</dt>
        <dd class="col-sm-9">@Model.Price.ToString("N2") ₺</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
