@model IEnumerable<FitMindAI.Models.TrainerAvailability>
@{
    ViewData["Title"] = "Antrenör Müsaitlik";
    string GetDayName(int day) => day switch
    {
        0 => "Pazar",
        1 => "Pazartesi",
        2 => "Salı",
        3 => "Çarşamba",
        4 => "Perşembe",
        5 => "Cuma",
        6 => "Cumartesi",
        _ => ""
    };
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Antrenör Müsaitlik Takvimi</h2>
        <a asp-action="Create" class="btn btn-primary">Yeni Müsaitlik Ekle</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Antrenör</th>
                <th>Salon</th>
                <th>Gün</th>
                <th>Saat Aralığı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Trainer?.FullName ?? "Bilinmeyen")</td>
                    <td>@item.Trainer.Gym.Name</td>
                    <td>@GetDayName(item.DayOfWeek)</td>
                    <td>@item.StartTime.ToString("HH:mm") - @item.EndTime.ToString("HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
