@model FitMindAI.Models.Trainer
@{
    ViewData["Title"] = "Antrenör Detayları";
}

<div class="container mt-4">
    <h2>Antrenör Detayları</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FullName)</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Gym)</dt>
        <dd class="col-sm-9">@Model.Gym.Name</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Bio)</dt>
        <dd class="col-sm-9">@(Model.Bio ?? "-")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.AvatarUrl)</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
            {
                <img src="@Model.AvatarUrl" alt="Avatar" class="img-thumbnail" style="max-width: 150px;" />
            }
            else
            {
                <span>-</span>
            }
        </dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.IsActive)</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-secondary">Pasif</span>
            }
        </dd>
    </dl>

    @if (Model.TrainerSpecialties.Any())
    {
        <h4 class="mt-4">Uzmanlıklar</h4>
        <ul class="list-group mb-3">
            @foreach (var ts in Model.TrainerSpecialties)
            {
                <li class="list-group-item">@ts.Specialty.Name</li>
            }
        </ul>
    }

    @if (Model.TrainerServices.Any())
    {
        <h4 class="mt-4">Verdiği Hizmetler</h4>
        <ul class="list-group mb-3">
            @foreach (var ts in Model.TrainerServices)
            {
                <li class="list-group-item">
                    @ts.ServiceType.Name 
                    <span class="text-muted">(@ts.ServiceType.DurationInMinutes dk - @ts.ServiceType.Price.ToString("N2") ₺)</span>
                </li>
            }
        </ul>
    }

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>
