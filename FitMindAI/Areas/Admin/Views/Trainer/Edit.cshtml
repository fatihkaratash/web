@model FitMindAI.Models.Trainer
@{
    ViewData["Title"] = "Antrenör Düzenle";
    var specialties = ViewBag.Specialties as List<FitMindAI.Models.Specialty>;
    var serviceTypes = ViewBag.ServiceTypes as List<FitMindAI.Models.ServiceType>;
    var selectedSpecialties = ViewBag.SelectedSpecialties as List<int> ?? new List<int>();
    var selectedServices = ViewBag.SelectedServices as List<int> ?? new List<int>();
}

<div class="container mt-4">
    <h2>Antrenör Düzenle</h2>
    <hr />

    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GymId" class="form-label"></label>
                    <select asp-for="GymId" asp-items="ViewBag.Gyms" class="form-select">
                        <option value="">-- Salon Seçin --</option>
                    </select>
                    <span asp-validation-for="GymId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Bio" class="form-label"></label>
                    <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AvatarUrl" class="form-label"></label>
                    <input asp-for="AvatarUrl" class="form-control" placeholder="https://example.com/avatar.jpg" />
                    <span asp-validation-for="AvatarUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                </div>

                <!-- Uzmanlıklar -->
                <div class="mb-3">
                    <label class="form-label">Uzmanlıklar</label>
                    <div class="border rounded p-3">
                        @if (specialties != null && specialties.Any())
                        {
                            @foreach (var specialty in specialties)
                            {
                                var isChecked = selectedSpecialties.Contains(specialty.Id);
                                <div class="form-check">
                                    <input type="checkbox" name="selectedSpecialties" value="@specialty.Id" 
                                           class="form-check-input" id="specialty_@specialty.Id" 
                                           @(isChecked ? "checked" : "") />
                                    <label class="form-check-label" for="specialty_@specialty.Id">
                                        @specialty.Name
                                    </label>
                                </div>
                            }
                        }
                    </div>
                </div>

                <!-- Hizmetler -->
                <div class="mb-3">
                    <label class="form-label">Verdiği Hizmetler</label>
                    <div class="border rounded p-3">
                        @if (serviceTypes != null && serviceTypes.Any())
                        {
                            @foreach (var service in serviceTypes)
                            {
                                var isChecked = selectedServices.Contains(service.Id);
                                <div class="form-check">
                                    <input type="checkbox" name="selectedServices" value="@service.Id" 
                                           class="form-check-input" id="service_@service.Id" 
                                           @(isChecked ? "checked" : "") />
                                    <label class="form-check-label" for="service_@service.Id">
                                        @service.Name (@service.DurationInMinutes dk - @service.Price.ToString("N2") ₺)
                                    </label>
                                </div>
                            }
                        }
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
