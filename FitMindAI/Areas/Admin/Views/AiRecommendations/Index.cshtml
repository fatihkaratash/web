@model IEnumerable<FitMindAI.ViewModels.AiRecommendationListViewModel>
@{
    ViewData["Title"] = "AI Logları";
    var totalCount = ViewBag.TotalCount;
    var todayCount = ViewBag.TodayCount;
    var goalStats = ViewBag.GoalStats as List<dynamic>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>AI Logları</h2>
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>

    <!-- İstatistikler -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title">Toplam AI Önerisi</h6>
                    <h2 class="mb-0">@totalCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title">Bugünkü İstekler</h6>
                    <h2 class="mb-0">@todayCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Hedef Dağılımı</h6>
                    @if (goalStats != null && goalStats.Any())
                    {
                        <div class="d-flex gap-3">
                            @foreach (var stat in goalStats)
                            {
                                <div>
                                    <span class="badge bg-info">@stat.Goal</span>
                                    <strong>@stat.Count</strong>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Henüz veri yok</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Son AI Önerileri (50 kayıt)</h5>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    Henüz AI önerisi kaydı bulunmamaktadır.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Hedef</th>
                                <th>Öneri Özeti</th>
                                <th>Oluşturulma</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><span class="badge bg-primary">@item.Goal</span></td>
                                    <td style="max-width: 400px;">
                                        <small class="text-muted">@item.OutputPreview</small>
                                    </td>
                                    <td>
                                        <small>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Detay
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
