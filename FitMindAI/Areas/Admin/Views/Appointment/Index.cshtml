@model IEnumerable<FitMindAI.Models.Appointment>
@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filtreleme Formu -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Durum</label>
                <select name="status" class="form-select">
                    <option value="">Tümü</option>
                    <option value="0" selected="@(ViewBag.SelectedStatus == 0)">Onay Bekliyor</option>
                    <option value="1" selected="@(ViewBag.SelectedStatus == 1)">Onaylandı</option>
                    <option value="2" selected="@(ViewBag.SelectedStatus == 2)">Reddedildi</option>
                    <option value="3" selected="@(ViewBag.SelectedStatus == 3)">İptal Edildi</option>
                    <option value="4" selected="@(ViewBag.SelectedStatus == 4)">Tamamlandı</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Antrenör</label>
                <select name="trainerId" class="form-select">
                    <option value="">Tüm Antrenörler</option>
                    @foreach (var trainer in ViewBag.Trainers)
                    {
                        <option value="@trainer.Id" selected="@(ViewBag.SelectedTrainer == trainer.Id)">
                            @trainer.FullName
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-funnel"></i> Filtrele
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-arrow-counterclockwise"></i> Sıfırla
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Randevu Listesi -->
@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Randevu bulunamadı.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Üye</th>
                    <th>Antrenör</th>
                    <th>Salon</th>
                    <th>Hizmet</th>
                    <th>Tarih / Saat</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@(item.Member?.FullName ?? "Bilinmeyen")</strong><br />
                            <small class="text-muted">@item.Member.UserId</small>
                        </td>
                        <td>@item.Trainer.FullName</td>
                        <td>@item.Trainer.Gym.Name</td>
                        <td>
                            @item.ServiceType.Name<br />
                            <small class="text-muted">@item.ServiceType.DurationInMinutes dk - @item.TotalPrice.ToString("C")</small>
                        </td>
                        <td>
                            @item.StartDateTime.ToString("dd.MM.yyyy")<br />
                            <strong>@item.StartDateTime.ToString("HH:mm")</strong>
                        </td>
                        <td>
                            @switch (item.Status)
                            {
                                case AppointmentStatus.Pending:
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock"></i> Onay Bekliyor
                                    </span>
                                    break;
                                case AppointmentStatus.Approved:
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Onaylandı
                                    </span>
                                    break;
                                case AppointmentStatus.Rejected:
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Reddedildi
                                    </span>
                                    break;
                                case AppointmentStatus.Canceled:
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-slash-circle"></i> İptal Edildi
                                    </span>
                                    break;
                                case AppointmentStatus.Completed:
                                    <span class="badge bg-info">
                                        <i class="bi bi-check2-all"></i> Tamamlandı
                                    </span>
                                    break;
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Details", new { id = item.Id })" 
                                   class="btn btn-sm btn-info" title="Detaylar">
                                    <i class="bi bi-eye"></i>
                                </a>
                                
                                @if (item.Status == AppointmentStatus.Pending)
                                {
                                    <!-- Onayla Butonu -->
                                    <form method="post" asp-action="Approve" asp-route-id="@item.Id" 
                                          style="display:inline;" 
                                          onsubmit="return confirm('Bu randevuyu onaylamak istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-success" title="Onayla">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>

                                    <!-- Reddet Butonu (Modal Açar) -->
                                    <button type="button" class="btn btn-sm btn-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#rejectModal@(item.Id)" 
                                            title="Reddet">
                                        <i class="bi bi-x-lg"></i>
                                    </button>

                                    <!-- Reject Modal -->
                                    <div class="modal fade" id="rejectModal@(item.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form method="post" asp-action="Reject" asp-route-id="@item.Id">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Randevuyu Reddet</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>
                                                            <strong>@(item.Member?.FullName ?? "Bilinmeyen")</strong> için 
                                                            <strong>@item.StartDateTime.ToString("dd.MM.yyyy HH:mm")</strong> 
                                                            tarihindeki randevuyu reddetmek istediğinize emin misiniz?
                                                        </p>
                                                        <div class="mb-3">
                                                            <label for="adminNote@(item.Id)" class="form-label">Reddetme Nedeni (Opsiyonel)</label>
                                                            <textarea class="form-control" 
                                                                      id="adminNote@(item.Id)" 
                                                                      name="adminNote" 
                                                                      rows="3" 
                                                                      placeholder="Örn: Antrenör o saatte müsait değil"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                        <button type="submit" class="btn btn-danger">Reddet</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
